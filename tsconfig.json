{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "esModuleInterop": true,
    "target": "ESNext",
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "lib": ["es2015"],
  "include": [
    "constants/**/*.ts",
    "db/**/*.ts",
    "services/**/*.ts",
    "utils/**/*.ts",
    "drizzle.config.ts"
  ],
}
