{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "esModuleInterop": true,
    "target": "ESNext",
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "lib": ["es2015"],
  "include": [
    "constants/**/*",
    "db/**/*",
    "services/**/*",
    "utils/**/*",
    "drizzle.config.ts"
  ],
}
